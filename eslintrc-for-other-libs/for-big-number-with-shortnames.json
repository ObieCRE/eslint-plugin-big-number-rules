{
  "plugins": ["big-number-rules"],
  "settings": {
    "big-number-rules": {
      "construct": "BigNumber",
      "importDeclaration": "__IGNORE__",
      "supportsSum": true,
      "supportsBitwise": true,
      "supportsRound": false,
      "sum": "sum",
      "arithmetic": {
        "+": "plus",
        "-": "minus",
        "/": "div",
        "*": "times",
        "**": "pow",
        "%": "mod"
      },
      "assignment": {
        "+=": "plus",
        "-=": "minus",
        "/=": "div",
        "*=": "times",
        "**=": "pow",
        "%=": "mod",
        ">>=": "shiftedBy",
        ">>>=": "shiftedBy",
        "<<=": ["${L}", "shiftedBy", "-${R}"]
      },
      "comparison": {
        "<": "isLessThan",
        "<=": "isLessThanOrEqualTo",
        "===": "isEqualTo",
        "==": "isEqualTo",
        ">=": "isGreaterThanOrEqualTo",
        ">": "isGreaterThan"
      },
      "bitwise": {
        ">>": "shiftedBy",
        ">>>": "shiftedBy",
        "<<": ["${L}", "shiftedBy", "-${R}"]
      },
      "math": {
        "min": "min",
        "max": "max",
        "random": "random",
        "abs": "abs",
        "sign": ["__CONSTRUCT__(${A}).comparedTo(0)"],
        "sqrt": "sqrt"
      },
      "number": {
        "parseFloat": ["__CONSTRUCT__(${A})"],
        "toExponential": "toExponential",
        "toFixed": "dp",
        "toPrecision": "toPrecision",
        "toString": "toString"
      }
    }
  }
}
